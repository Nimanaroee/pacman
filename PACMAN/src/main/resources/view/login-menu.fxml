<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="373.0" prefWidth="398.0" spacing="20.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.LoginMenuController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <VBox alignment="CENTER" prefHeight="300.0" prefWidth="200.0" spacing="12.0">
      <children>
         <TextField fx:id="usernameField" alignment="CENTER" prefHeight="26.0" prefWidth="251.0" promptText="username-field">
            <font>
               <Font name="System Italic" size="15.0" />
            </font>
         </TextField>
         <PasswordField fx:id="passwordField" alignment="CENTER" opacity="0.5" promptText="password-field">
            <font>
               <Font name="System Bold" size="14.0" />
            </font>
         </PasswordField>
         <Button fx:id="loginButton" mnemonicParsing="false" onAction="#onClickLoginButton" text="login" />
         <Button fx:id="registerButton" mnemonicParsing="false" onAction="#onClickRegisterButton" text="register" />
         <Label fx:id="labelText" textAlignment="CENTER" textFill="#ae0000">
            <font>
               <Font size="10.0" />
            </font></Label>
      </children>
      <opaqueInsets>
         <Insets />
      </opaqueInsets>
      <VBox.margin>
         <Insets bottom="10.0" top="10.0" />
      </VBox.margin>
      <padding>
         <Insets bottom="10.0" top="10.0" />
      </padding>
   </VBox>

    <Label fx:id="welcomeText" />
</VBox>
